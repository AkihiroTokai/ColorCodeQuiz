<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:weightSum="1"
    tools:context="com.example.owner.colorcodequiz.MenuActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="nowPoint"
            android:id="@+id/nowPointview"
            android:layout_weight="0.85"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorMode"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="selectRGB"
                android:text="RGBmode" />

            <RadioButton
                android:id="@+id/hsb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:onClick="selectHSB"
                android:text="HSBmode" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/twitter"
            android:layout_toStartOf="@+id/CodertoColor_practice"
            android:text="Practice"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/CodertoColor_practice"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/ColortoCode_practice"
            android:layout_toEndOf="@+id/Others"
            android:nestedScrollingEnabled="false"
            android:onClick="CodetoColor_practice"
            android:text="CodetoColor"
            bootstrap:bb_icon_left="fa-unlock"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_type="info" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/twitter"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_above="@+id/Others"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/Others"
            android:onClick="ColortoCode_practice"
            android:text="ColortoCode"
            bootstrap:bb_icon_left="fa-unlock"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_type="success" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tomenu1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/tomenu2"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:nestedScrollingEnabled="false"
            android:onClick="tomenu2"
            android:text="Level1～5"
            bootstrap:bb_icon_left="fa-key"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_type="primary" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/tomenu3"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_above="@+id/mode"
            android:layout_alignEnd="@+id/mode"
            android:layout_marginLeft="10dp"
            android:onClick="tomenu3"
            android:text="Level6～10"
            bootstrap:bb_icon_left="fa-key"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_type="primary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Others"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ComingSoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Random"
            android:layout_gravity="center_horizontal"
            android:text="Coming Soon !"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>




        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">

        </com.google.android.gms.ads.AdView>


</LinearLayout>
