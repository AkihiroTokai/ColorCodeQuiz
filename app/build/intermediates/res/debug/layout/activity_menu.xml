<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.owner.colorcodequiz.MenuActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:gravity="center|end">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="nowPoint"
            android:id="@+id/nowPointview"
            android:layout_weight="1.00"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ColorMode"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:gravity="center">
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGBmode"
                android:id="@+id/rgb"
                android:checked="true"
                android:onClick="selectRGB" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="HSBmode"
                android:id="@+id/hsb"
                android:onClick="selectHSB"
                android:layout_gravity="right" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Practice"
            android:id="@+id/mode"
            android:layout_above="@+id/twitter"
            android:layout_toStartOf="@+id/CodertoColor_practice" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="CodetoColor"
            android:id="@+id/CodertoColor_practice"
            bootstrap:bb_type="info"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_icon_left="fa-unlock"
            android:layout_alignTop="@+id/ColortoCode_practice"
            android:layout_toEndOf="@+id/Others"
            android:nestedScrollingEnabled="false"
            android:onClick="CodetoColor_practice" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="ColortoCode"
            android:id="@+id/twitter"
            bootstrap:bb_type="success"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_icon_left="fa-unlock"
            android:layout_above="@+id/Others"
            android:layout_toStartOf="@+id/Others"
            android:onClick="ColortoCode_practice"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Random"
            android:id="@+id/Setting" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:id="@+id/tomenu1">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Level1～5"
            android:id="@+id/tomenu2"
            bootstrap:bb_type="primary"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_icon_left="fa-key"
            android:nestedScrollingEnabled="false"
            android:onClick="tomenu2"
            android:layout_marginLeft="10dp" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Level6～10"
            android:id="@+id/tomenu3"
            bootstrap:bb_type="primary"
            bootstrap:bb_roundedCorners="true"
            bootstrap:bb_icon_left="fa-key"
            android:onClick="tomenu3"
            android:layout_above="@+id/mode"
            android:layout_alignEnd="@+id/mode"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Others"
            android:id="@+id/Others"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Coming Soon !"
            android:id="@+id/ComingSoon"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Random"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>




</LinearLayout>
